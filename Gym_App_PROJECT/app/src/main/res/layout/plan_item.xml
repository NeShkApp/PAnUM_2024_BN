<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Training Name"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgPlan"
            android:layout_below="@+id/txtName"

            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/emptyCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgPlan"
            android:src="@drawable/ic_unchecked_circle"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/checkedCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgPlan"
            android:src="@drawable/ic_checked_circle"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPlan"
            android:text="Time: "
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/imgPlan"
            android:id="@+id/txtMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutes"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/txtTime"
            />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/txtTime"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>